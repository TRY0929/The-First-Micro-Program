/* components/classic/index.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.classic-item {
    width: 422rpx;
    height: 422rpx;
    margin-top: 60rpx;
    border-radius: 50%;
}
.play-icon {
    height: 120rpx;
    width: 120rpx;
    position: relative;
    bottom: 270rpx;
}
.tag {
    width: 46rpx;
    height: 142rpx;
    position: relative;
    right: 270rpx;
    bottom: 58rpx;
}
.content {
    font-size: 36rpx;
    max-width: 550rpx;
}
@keyframes rotation {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}
.rotation {
    animation: rotation 12s linear;
}
