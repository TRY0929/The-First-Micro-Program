/* components/search/index.wxss */
.container {
    width: 100%;
    margin-top: 140rpx;
}
.search-header {
    position: fixed;
    top: 0;
    left: 0;
    background-color: #fff;
    z-index: 100;
    height: 100rpx;
    width: 100%;
    padding: 16rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
}
.search-input-wrapper {
    flex: 0 0 86%;
    height: 100%;
    background-color: #f5f5f5;
    border-radius: 20rpx;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}
.search-input {
    flex: 1;
    padding: 10rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #333;
}
.search-icon-wrapper {
    flex: 0 0 60rpx;
    display: flex;
    justify-content: center;
}
.search-icon {
    height: 30rpx;
    width: 30rpx;
}
.search-cancel-wrapper {
    flex: 0 0 14%;
    display: flex;
    justify-content: flex-end;
}
.search-cancel-text {
    font-size: 32rpx;
}

.sub-search-wrapper {
    margin-top: 40rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 0 40rpx;
}
.sub-search-header {
    height: 60rpx;
    width: 100%;
    display: flex;
    align-items: center;
}
.line {
    height: 32rpx;
    width: 10rpx;
    background-color: #000;
    margin-right: 20rpx;
}
.sub-search-title {
    font-size: 28rpx;
}
.sub-container {
    padding: 30rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
}
.keyword-wrapper {
    display: flex;
    flex-flow: row wrap;
}
.keyword-item {
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 15rpx;
    background-color: #f5f5f5;
}
.content-container {
    width: 100%;
    margin-top: 140rpx;
    background-color: #fff;
}
.content-header {
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.header-image {
    height: 30rpx;
    width: 94rpx;
}
.book-container {
    display: flex;
    flex-flow: row wrap;
    padding: 0 90rpx;
    box-sizing: border-box;
    justify-content: space-between;
    width: 100%;
}
.book {
    display: flex;
    margin-bottom: 40rpx;
}
.no-result {
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.loading {
    margin: 50rpx 0 50rpx 0;
}
.loading-center {
    position: absolute;
    top: 50%;
    left: 50%;
}
