/* miniprogram/pages/book/index.wxss */
.container {
    width: 100%;
}
.search-container {
    position: fixed;
    top: 0;
    left: 0;
    height: 100rpx;
    border-top: 1px solid #eee;
    border-bottom: rpx solid #eee;
    width: 100%;
    background-color: #fff;
    padding: 16rpx 30rpx;
    box-sizing: border-box;
    box-shadow: 0 2px 3px rgba(0, 0, 0, .1);
    z-index: 100;
}
.search {
    height: 100%;
    width: 100%;
    background-color: #f5f5f5;
    border-radius: 20rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}
.search-image {
    height: 32rpx;
    width: 32rpx;
    margin-right: 20rpx;
}
.search-text {
    font-size: 32rpx;
    color: #999;
}
.content-container {
    width: 100%;
    margin-top: 100rpx;
    background-color: #f5f5f5;
}
.content-header {
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.header-image {
    height: 30rpx;
    width: 94rpx;
}
.book-container {
    display: flex;
    flex-flow: row wrap;
    padding: 0 90rpx;
    box-sizing: border-box;
    justify-content: space-between;
    width: 100%;
}
.book {
    display: flex;
    margin-bottom: 40rpx;
}
